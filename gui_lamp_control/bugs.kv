<BugsDashboard>
	GridLayout:
		cols: 6
		size: root.size

		Label
			text: "BUGS"

		Label
			text: root.current_time

		Label
			text: root.current_peak

		Label
			text: ""

		Label
			text: ""

		Label
			text: ""

		# HEADINGS

		Label:
			text: "LAMP"

		Label:
			text: "IP ADDRESS"

		Label:
			text: "POSITION"

		Label:
			text: "LOG"

		Label:
			text: "BROADCAST"

		Label:
			text: "LISTEN"

		#Lamp0
		Label:
			text: "0"

		Label:
			text: root.lamp0_ip

		Label:
			text: root.lamp0_position

		GridLayout:
			rows: 6
			Widget:
				id: separator
				size_hint_y: None
				height: 1
				canvas:
					Color:
						rgb: 0.5,0.5,0.5
					Rectangle:
						pos: separator.x, separator.y
						size: separator.width, 1
			Label:
				id: log_0_message_0
				text: root.lamp0_log_0
				color: 0.5,0.5,0.5,1
				font_size: 12
			Label:
				id: log_0_message_1
				text: root.lamp0_log_1
				color: 0.5,0.5,0.5,1
				font_size: 12
			Label:
				id: log_0_message_2
				text: root.lamp0_log_2
				color: 0.5,0.5,0.5,1
				font_size: 12
			Label:
				id: log_0_message_3
				text: root.lamp0_log_3
				color: 0.5,0.5,0.5,1
				font_size: 12
			Label:
				id: log_0_message_4
				text: root.lamp0_log_4
				color: 0.6,0.8,0.4,1
				font_size: 12


		ToggleButton:
			id: broadcast_0
			state: 'normal'
			on_press: root.assign_listeners("x",0)

        GridLayout:
            cols: 2
            Label:
				id: listen_0_to_0
                text: '0'
            ToggleButton
				id: listen_0_to_1
                text: '1'
				group: 'listen0'
				state: 'normal'
                on_press: root.assign_listeners(0,1)
            ToggleButton
				id: listen_0_to_2
                text: '2'
				group: 'listen0'
				state: 'normal'
                on_press: root.assign_listeners(0,2)
            ToggleButton
				id: listen_0_to_3
                text: '3'
				group: 'listen0'
				state: 'normal'
                on_press: root.assign_listeners(0,3)

		#Lamp1
		Label:
			text: "1"

		Label:
			text: root.lamp1_ip

		Label:
			text: root.lamp1_position

		Label:
			id: log_1
			text: root.lamp1_console

		ToggleButton:
			id: broadcast_1
			state: 'normal'
			on_press: root.assign_listeners("x",1)

        GridLayout:
            cols: 2
            ToggleButton
				id: listen_1_to_0
                text: '0'
				group: 'listen1'
				state: 'normal'
                on_press: root.assign_listeners(1,0)
            Label:
				id: listen_1_to_1
                text: '1'
            ToggleButton
				id: listen_1_to_2
                text: '2'
				group: 'listen1'
				state: 'normal'
                on_press: root.assign_listeners(1,2)
            ToggleButton
				id: listen_1_to_3
                text: '3'
				group: 'listen1'
				state: 'normal'
                on_press: root.assign_listeners(1,3)

		#Lamp2
		Label:
			text: "2"

		Label:
			text: root.lamp2_ip

		Label:
			text: root.lamp2_position

		Label:
			id: log_2
			text: root.lamp2_console

		ToggleButton:
			id: broadcast_2
			state: 'normal'
			on_press: root.assign_listeners("x",2)

        GridLayout:
            cols: 2
            ToggleButton
				id: listen_2_to_0
                text: '0'
				group: 'listen2'
				state: 'normal'
                on_press: root.assign_listeners(2,0)
            ToggleButton
				id: listen_2_to_1
                text: '1'
				group: 'listen2'
				state: 'normal'
                on_press: root.assign_listeners(2,1)
            Label:
				id: listen_2_to_2
                text: '2'
            ToggleButton
				id: listen_2_to_3
                text: '3'
				group: 'listen2'
				state: 'normal'
                on_press: root.assign_listeners(2,3)

		#Lamp3
		Label:
			text: "3"

		Label:
			text: root.lamp3_ip

		Label:
			text: root.lamp3_position

		Label:
			id: log_3
			text: root.lamp3_console

		ToggleButton:
			id: broadcast_3
			state: 'normal'
			on_press: root.assign_listeners("x",3)

        GridLayout:
            cols: 2
            ToggleButton
				id: listen_3_to_0
                text: '0'
				group: 'listen3'
				state: 'normal'
                on_press: root.assign_listeners(3,0)
            ToggleButton
				id: listen_3_to_1
                text: '1'
				group: 'listen3'
				state: 'normal'
                on_press: root.assign_listeners(3,1)
            ToggleButton
				id: listen_3_to_2
                text: '2'
				group: 'listen3'
				state: 'normal'
                on_press: root.assign_listeners(3,2)
            Label:
				id: listen_3_to_3
                text: '3'
