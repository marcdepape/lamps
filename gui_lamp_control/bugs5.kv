				color: 0.5,0.5,0.5,1
				font_size: 12
			Label:
				id: log_0_message_4
				text: root.lamp0_log_4
				color: 0.6,0.8,0.4,1
				font_size: 12

		ToggleButton:
			id: broadcast_0
			state: 'normal'
			on_press: root.assign_listeners("x",0)

        GridLayout:
            cols: 2
            Label:
				id: listen_0_to_0
                text: '0'
            ToggleButton
				id: listen_0_to_1
                text: '1'
				group: 'listen0'
				state: 'normal'
                on_press: root.assign_listeners(0,1)
            ToggleButton
