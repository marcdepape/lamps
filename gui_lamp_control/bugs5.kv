<BugsDashboard>
	GridLayout:
		cols: 6
		size: root.size

		Label
			text: "BUGS"

		Label
			text: root.current_time

		Label:
			text: ""

		GridLayout:
			rows:2
			Slider:
	            id: s1
	            size_hint_x: None
	            orientation: 'horizontal'
				min: 0.25
				max: 1.5
				step: 0.01
	            value: s1.value
	            on_value: root.set_peak(self.value)
			Label:
	            text: '{}'.format(s1.value)

		GridLayout:
            cols: 2
            ToggleButton:
				id: all_0
                text: '0'
				group: 'all0'
				state: 'normal'
                on_press: root.all_streaming_one(0)
			ToggleButton:
				id: all_1
                text: '1'
				group: 'all1'
				state: 'normal'
                on_press: root.all_streaming_one(1)
			ToggleButton:
				id: all_2
                text: '2'
				group: 'all2'
				state: 'normal'
                on_press: root.all_streaming_one(2)
			ToggleButton:
				id: all_3
                text: '3'
				group: 'all3'
				state: 'normal'
                on_press: root.all_streaming_one(3)
			ToggleButton:
				id: all_4
                text: '4'
				group: 'all4'
				state: 'normal'
                on_press: root.all_streaming_one(4)

		GridLayout:
            cols: 2
			Button:
				id: reset_all
				text: "ALL"
				background_color: 1.0, 0.0, 0.0, 1.0
				on_press: root.reset_lamp(-1)
			GridLayout:
				cols: 2
				Button:
					text: "0"
					background_color: 1.0, 0.0, 0.0, 1.0
					on_press: root.reset_lamp(0)
				Button:
					text: "1"
					background_color: 1.0, 0.0, 0.0, 1.0
					on_press: root.reset_lamp(1)
				Button:
					text: "2"
					background_color: 1.0, 0.0, 0.0, 1.0
					on_press: root.reset_lamp(2)
				Button:
					text: "3"
					background_color: 1.0, 0.0, 0.0, 1.0
					on_press: root.reset_lamp(3)
				Button:
					text: "4"
					background_color: 1.0, 0.0, 0.0, 1.0
					on_press: root.reset_lamp(4)

		# HEADINGS

		Label:
			text: "LAMP"

		Label:
			text: "IP ADDRESS"

		Label:
			text: "POSITION"

		Label:
			text: "LOG"

		Label:
			text: "BROADCAST"

		Label:
			text: "LISTEN"

		#Lamp0
		Label:
			text: "0"

		Label:
			text: root.lamp0_ip

		Label:
			text: root.lamp0_position

		GridLayout:
			rows: 6
			Widget:
				id: separator
				size_hint_y: None
				height: 1
				canvas:
					Color:
						rgba: 0.5,0.5,0.5,1
					Rectangle:
						pos: separator.x, separator.y
						size: separator.width, 1
			Label:
				id: log_0_message_0
				text: root.lamp0_log_0
				color: 0.5,0.5,0.5,1
				font_size: 12
			Label:
				id: log_0_message_1
				text: root.lamp0_log_1
				color: 0.5,0.5,0.5,1
				font_size: 12
			Label:
